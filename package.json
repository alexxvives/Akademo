{
  "name": "akademo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "workers/*"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:types": "cd packages/types && npm run build",
    "start": "next start",
    "lint": "next lint",
    "pages:build": "npx @opennextjs/cloudflare build",
    "preview": "npx @opennextjs/cloudflare preview",
    "deploy": "npx @opennextjs/cloudflare deploy",
    "deploy:api": "cd workers/akademo-api && npx wrangler deploy",
    "deploy:all": "npm run deploy && npm run deploy:api",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv",
    "db:migrate": "wrangler d1 migrations apply akademo-db --remote",
    "db:migrate:local": "wrangler d1 migrations apply akademo-db --local"
  },
  "dependencies": {
    "@akademo/types": "*",
    "@opennextjs/cloudflare": "^1.14.0",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.26.2",
    "hls.js": "^1.6.15",
    "lottie-react": "^2.4.1",
    "next": "14.2.15",
    "plyr": "^3.8.3",
    "plyr-react": "^6.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.6.0",
    "tailwind-merge": "^3.4.0",
    "ua-parser-js": "^1.0.38",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/ua-parser-js": "^0.7.39",
    "autoprefixer": "^10.4.20",
    "eslint": "^8",
    "eslint-config-next": "14.2.15",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5",
    "wrangler": "^4.58.0"
  }
}
