# AKADEMO Environment Variables Template
# Copy this to .env and fill in your values

# Database (local development only)
DATABASE_URL="file:./dev.db"

# Session secret (generate with: openssl rand -base64 32)
SESSION_SECRET="your-secret-key-here"

# File storage
STORAGE_TYPE="local"
UPLOAD_DIR="./uploads"

# App URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:8787"

# Zoom OAuth (get from Zoom Marketplace)
NEXT_PUBLIC_ZOOM_CLIENT_ID="your-zoom-client-id"

# Google Maps API (get from Google Cloud Console)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Stripe (get from Stripe Dashboard)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"

# API URL (separate Hono worker)
NEXT_PUBLIC_API_URL="https://akademo-api.alexxvives.workers.dev"
